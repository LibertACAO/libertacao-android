<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Libertacao" parent="Theme.Libertacao.Base"/>

    <style name="Theme.Libertacao.Base" parent="Theme.AppCompat.Light">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColor">@color/Black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Custom styles -->

    <style name="LogoImageView">
        <item name="android:layout_width">@dimen/logo_image_size</item>
        <item name="android:layout_height">@dimen/logo_image_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="LoginButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/login_button_background_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginEditText" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">16dp</item>
    </style>

    <!-- Text view -->
    <style name="SmallGrayTextView">
        <item name="android:color">@android:color/secondary_text_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
